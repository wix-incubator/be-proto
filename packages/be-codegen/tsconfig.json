{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noEmit": true,
        "inlineSources": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "importHelpers": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules/"],
    "include": ["target/test-output/"],
}